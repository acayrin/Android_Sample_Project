<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_list_item"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/lv_books_item_icon"
        android:layout_width="140sp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_baseline_library_books_200"
        app:tint="@color/c4" />

    <LinearLayout
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8sp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lv_books_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/c4"
            android:padding="6sp"
            android:paddingStart="12sp"
            android:paddingEnd="12sp"
            android:text="{book_title}"
            android:textColor="@color/c1"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:text="@string/lv_item_author"
                android:textColor="@color/c4"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/lv_books_item_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:text="{book_author}"
                android:textColor="@color/c4"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:text="@string/lv_item_publisher"
                android:textColor="@color/c4"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/lv_books_item_publisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:text="{book_publisher}"
                android:textColor="@color/c4"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:text="@string/lv_item_genre"
                android:textColor="@color/c4"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/lv_books_item_genres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:text="{book_genres}"
                android:textColor="@color/c4"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/lv_books_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginTop="8sp"
            android:text="{book_price}"
            android:textColor="@color/c4"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
