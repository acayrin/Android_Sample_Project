<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_menu_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fragment_navigation_btn_home"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_menu_item"
            android:src="@drawable/ic_baseline_home_36"
            android:textColor="@color/black"
            app:tint="@color/c4" />

        <ImageView
            android:id="@+id/fragment_navigation_btn_rentals"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_menu_item"
            android:src="@drawable/ic_baseline_backup_table_36"
            android:textColor="@color/black"
            app:tint="@color/c4" />

        <ImageView
            android:id="@+id/fragment_navigation_btn_books"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_menu_item"
            android:src="@drawable/ic_baseline_menu_book_36"
            android:textColor="@color/black"
            app:tint="@color/c4" />

        <ImageView
            android:id="@+id/fragment_navigation_btn_members"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_menu_item"
            android:src="@drawable/ic_baseline_supervised_user_circle_36"
            android:textColor="@color/black"
            app:tint="@color/c4" />

        <ImageView
            android:id="@+id/fragment_navigation_btn_managers"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_menu_item"
            android:src="@drawable/ic_baseline_supervised_user_circle_36"
            android:textColor="@color/black"
            app:tint="@color/c4" />
    </LinearLayout>

</ScrollView>